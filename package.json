{
  "name": "Meister-SDK-vscode-extension",
  "displayName": "VsCode React SDK extension",
  "publisher": "gateway architects",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:connections",
    "onCommand:connection.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "meister explorer",
          "icon": "media/Meister.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "connections",
          "name": "connections"
        },
        {
          "id": "endPoints",
          "name": "endPoints"
        }
      ]
    },
    "commands": [
      {
        "command": "connections.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "connections.addEntry",
        "title": "Add"
      },
      {
        "command": "connections.save",
        "title": "Save"
      },
      {
        "command": "connection.start",
        "title": "connection"
      },
      {
        "command": "connections.success",
        "title": "connected"
      },
      {
        "command": "connections.fail",
        "title": "failed"
      },
      {
        "command": "connections.fillData",
        "title": "fillData"
      },
      {
        "command": "connections.editEntry",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "connections.deleteEntry",
        "title": "Delete",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      },
      {
        "command": "connections.connect",
        "title": "connect",
        "icon": {
          "light": "resources/light/connect.svg",
          "dark": "resources/dark/connect.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "connections.refreshEntry",
          "when": "view == connections",
          "group": "navigation"
        },
        {
          "command": "connections.addEntry",
          "when": "view == connections"
        }
      ],
      "view/item/context": [
        {
          "command": "connections.editEntry",
          "when": "view == connections",
          "group": "inline"
        },
        {
          "command": "connections.connect",
          "when": "view == connections",
          "group": "inline"
        },
        {
          "command": "connections.deleteEntry",
          "when": "view == connections",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && copy react-app\\dist\\index.html out\\index.html",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.0.0-next.0"
  },
  "dependencies": {
    "@gateway.architects/meister.usermanagement.authentication": "^1.0.4",
    "@gateway.architects/meister.usermanagement.authentication.": "^1.0.3",
    "@nechamaa/meister.usermanagement.autnentication": "^1.0.7",
    "got": "^11.8.2",
    "jsonfile": "^6.1.0",
    "request": "^2.88.2"
  }
}
